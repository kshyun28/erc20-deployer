{
	"name": "erc20-deployer",
	"version": "1.0.0",
	"description": "ERC20 tokens contract deployer for EVM-compatible chains.",
	"dependencies": {
		"@openzeppelin/contracts": "^4.0.0",
		"@truffle/hdwallet-provider": "^1.3.0",
		"dotenv": "^8.2.0",
		"truffle": "^5.6.8"
	},
	"scripts": {
		"deploy-eth-mainnet": "truffle compile && truffle deploy --reset --network eth_mainnet",
		"deploy-eth-goerli": "truffle compile && truffle deploy --reset --network eth_goerli",
		"deploy-polygon-mainnet": "truffle compile && truffle deploy --reset --network polygon_mainnet",
		"deploy-polygon-testnet": "truffle compile && truffle deploy --reset --network polygon_testnet",
		"deploy-bsc-mainnet": "truffle compile && truffle deploy --reset --network bsc_mainnet",
		"deploy-bsc-testnet": "truffle compile && truffle deploy --reset --network bsc_testnet"
	}
}
